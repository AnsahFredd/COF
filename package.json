{
  "name": "cofuel-home-of-events",
  "version": "1.0.0",
  "private": true,
  "description": "Event booking platform",
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "packages/*"
  ],
  "overrides": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=apps/frontend",
    "test:backend": "npm run test --workspace=apps/backend",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@mantine/carousel": "^7.17.8",
    "@mantine/dropzone": "^7.17.8",
    "@mantine/nprogress": "^7.17.8",
    "@mantine/spotlight": "^7.17.8"
  }
}
